    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "rm -rf photon_* && particle compile photon .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "find . -name 'photon_*' | xargs particle flash yellow-triangle",
            "problemMatcher": []
        }
    ]
}